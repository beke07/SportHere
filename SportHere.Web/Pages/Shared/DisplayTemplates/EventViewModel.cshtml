@model SportHere.Web.ViewModels.Event.EventViewModel

    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <input asp-for="@Model.Description" class="form-control" readonly/>
        </div>

        <div class="form-group">
            <label asp-for="@Model.SportId"></label>
            @Html.DropDownListFor(m => m.SportId, new List<SelectListItem>() { new SelectListItem(Model.SportSelect.Text, Model.SportSelect.Id.ToString())},
            new { @class = "form-control select2", @url = "/Events/Create?handler=sportList", @disabled="disabled" })
        </div>

        <div class="form-group">
            <label asp-for="@Model.MaxNumberOfParticipants"></label>
            <input asp-for="@Model.MaxNumberOfParticipants" class="form-control" readonly/>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Price"></label><label class="ml-1">(Ft)</label>
            <input asp-for="@Model.Price" class="form-control" readonly />
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col-lg-4">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        @Html.CheckBoxFor(m => m.IsLighting, new { @class = "custom-control-input", @id = "light", @disabled="disabled" })
                        <label class="custom-control-label" for="light" asp-for="@Model.IsLighting"></label>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        @Html.CheckBoxFor(m => m.HasBall, new { @class = "custom-control-input", @id = "ball", @disabled="disabled" })
                        <label class="custom-control-label" for="ball" asp-for="@Model.HasBall"></label>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        @Html.CheckBoxFor(m => m.HasDressingRoom, new { @class = "custom-control-input", @id = "dress", @disabled="disabled" })
                        <label class="custom-control-label" for="dress" asp-for="@Model.HasDressingRoom"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="form-group">
            <div class="form-row">
                <div class="col-lg-6">
                    <label asp-for="@Model.Color"></label><label class="ml-1">(Válasszon!)</label>
                    @Html.TextBoxFor(m => m.Color, new { @class = "colorpicker", @style = "cursor:context-menu; background-color: #" + @Model.Color + ";", @readonly = "readonly" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col-lg-6">
                    <label asp-for="@Model.Date"></label>
                    <div class="input-group date datepicker" id="datetimepicker1" data-target-input="nearest">
                        @Html.TextBoxFor(m => m.Date, new { @class = "form-control datetimepicker-input", @data_target = "#datetimepicker1", @readonly = "readonly" })
                        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <label asp-for="@Model.TimeTo"></label>
                    <div class="input-group date timepicker" id="datetimepicker3" data-target-input="nearest">
                        @Html.TextBoxFor(m => m.TimeTo, new { @class = "form-control datetimepicker-input", @data_target = "#datetimepicker3", @readonly = "readonly" })
                        <div class="input-group-append" data-target="#datetimepicker3" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Comment"></label>
            <textarea asp-for="@Model.Comment" class="form-control" style="resize:none;" rows="1" readonly></textarea>
        </div>

        @if (Model.IsChallenge)
        {
            <div class="form-group">
                <label asp-for="@Model.Prize"></label>
                <input asp-for="@Model.Prize" class="form-control" readonly />
                <span asp-validation-for="@Model.Prize" class="text-danger"></span>
            </div>
        }
    </div>

<div class="col-lg-12">
    <div id="map"></div>
</div>