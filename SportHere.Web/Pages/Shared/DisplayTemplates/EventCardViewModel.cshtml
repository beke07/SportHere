@model SportHere.Web.ViewModels.Event.EventCardViewModel

<div class="card text-center mt-3">
    <div class="card-header">
        Létrehozta: @Model.CreatorName
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <h3 class="text-left">@Model.Sport</h3>
                <h4 class="text-left">@Model.Description</h4>
            </div>
            <div class="col-lg-6 d-flex justify-content-end align-items-start">
                <h3>Időpont: @Model.Date</h3>
            </div>
        </div>
        <div class="row img-thumbnail mt-2 mb-2 mr-0 ml-0">
            <div class="col-lg-12 mt-2 mb-2">
                @Model.Comment
            </div>
            <div class="col-lg-12 mb-2">
                <img class="img-thumbnail" src="https://maps.googleapis.com/maps/api/staticmap?center=@Model.Lat,@Model.Long&zoom=12&size=800x300&key=AIzaSyAdrGSOv2Fazi5p2rH9xrE3AxNb9ENCTxE" title="Kép a térképről" />
            </div>
            <div class="col-lg-3">
                @if (Model.HasDressingRoom)
                {
                    <i class="fa fa-home" aria-hidden="true" title="Van öltöző"></i>
                }
                @if (Model.HasBall)
                {
                    <i class="fa fa-futbol-o" aria-hidden="true" title="Van labda"></i>
                }
                @if (Model.Price != 0)
                {
                    <i class="fa fa-usd" aria-hidden="true" title="Ár: @Model.Price Ft"></i>
                }
                else
                {
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                }
                @if (Model.IsLighting)
                {
                    <i class="fa fa-lightbulb-o" aria-hidden="true" title="Van világítás"></i>
                }
            </div>
            <div class="col-lg-3">
                @if (Model.IsChallenge)
                {
                    <i class="fa fa-trophy" aria-hidden="true"></i>
                    <h2 class="d-inline-block">@Model.Prize Ft</h2>
                }
            </div>
            <div class="col-lg-6 d-flex justify-content-end align-items-center">
                <a href="/Events/@Model.Id" class="btn btn-primary float-right ml-2">Részletek</a>
                @if (Model.ImParticipant)
                {
                    <a asp-page-handler="Participate" asp-route-id="@Model.Id" class="btn btn-danger float-right ml-2">Lemondom</a>
                }
                else
                {
                    <a asp-page-handler="Participate" asp-route-id="@Model.Id" class="btn btn-success float-right ml-2">Jelentkezem</a>
                }
            </div>
        </div>

    </div>
    <div class="card-footer text-muted">
        @Model.MaxParticipants / @Model.Participants résztvevő
    </div>
</div>