@page
@model SportHere.Web.Areas.Events.Pages.IndexModel
@{
}

<div class="row d-flex justify-content-between align-items-center mb-3">
    <h1>Eseményeim</h1>
    <a href="/Events/Create" class="btn btn-primary float-right">Esemény létrehozása</a>
</div>

<div class="row">
    <table class="datatable table table-striped table-bordered">
        <thead>
            <tr>
                <th>Leírás</th>
                <th>Időpont</th>
                <th>Jelentkezők</th>
                <th>Típus</th>
                <th>Részletek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model.Events)
            {
                <tr>
                    <td>@ev.Description</td>
                    <td>@ev.DateTime</td>
                    <td>@ev.MaxNumberOfParticipants / @ev.NumberofParcitipans</td>
                    <td class="d-flex align-items-center justify-content-center">
                        @if (ev.IsChallenge)
                        {
                            <i class="fa fa-trophy" aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                        }
                    </td>
                    <td>
                        <a href="/Events/@ev.Id" class="mr-1">
                            @if (ev.IsExpired)
                            {
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            }
                            else
                            {
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            }
                        </a>
                        <form asp-page-handler="delete" asp-route-id="@ev.Id" method="post" class="d-inline-block">
                            <button class="link-button">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
